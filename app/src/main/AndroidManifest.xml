<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lyun.bitmapdisplay">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.lyun.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoadBigBitmapActivity" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ListImageAct" />
        <activity android:name=".ShowImageAct" />
        <activity android:name=".ImageViewPagerAct" />
        <activity android:name=".ShowDialogAct"></activity>
    </application>

</manifest>
